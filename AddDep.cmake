function(ADD_DEP_INCLUDE_DIR FOLDER)
  set(INCLUDE_DIR)
  if(WIN32)
    if(CMAKE_SIZEOF_VOID_P EQUAL 8)
      set(INCLUDE_DIR "${FOLDER}/include/windows_x86_64")
    else()
      set(INCLUDE_DIR "${FOLDER}/include/windows_x86_32")
    endif()
  elseif(APPLE)
    if(BUILD64)
      set(INCLUDE_DIR "${FOLDER}/include/macos_x86_64")
    else()
      set(INCLUDE_DIR "${FOLDER}/include/macos_x86_32")
    endif()
  else()
    if(BUILD64)
      set(INCLUDE_DIR "${FOLDER}/include/linux_x86_64")
    else()
      set(INCLUDE_DIR "${FOLDER}/include/linux_x86_32")
    endif()
  endif()
  set(DEP_INCLUDE_DIR ${DEP_INCLUDE_DIR} ${INCLUDE_DIR} PARENT_SCOPE)
endfunction()

function(GET_CURRENT_DEP_LIBRARY_PREFIX FOLDER)
  set(LIBRARY_PREFIX)
  if(WIN32)
    if(CMAKE_SIZEOF_VOID_P EQUAL 8)
      if(MSVC14)
        if(EXISTS "${FOLDER}/lib/windows_x86_64_msvc14")
