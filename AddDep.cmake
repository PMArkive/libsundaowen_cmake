          set(LIBRARY_PREFIX "windows")
        elseif(EXISTS "${FOLDER}/lib")
          set(LIBRARY_PREFIX ".")
        endif()
      endif()
    endif()
  elseif(APPLE)
    if(BUILD64)
      if(EXISTS "${FOLDER}/lib/macos_x86_64")
        set(LIBRARY_PREFIX "macos_x86_64")
      elseif(EXISTS "${FOLDER}/lib/macos")
