        if(EXISTS "${FOLDER}/lib/windows_x86_64")
          set(LIBRARY_PREFIX "windows_x86_64")
        elseif(EXISTS "${FOLDER}/lib/windows")
          set(LIBRARY_PREFIX "windows")
        elseif(EXISTS "${FOLDER}/lib")
