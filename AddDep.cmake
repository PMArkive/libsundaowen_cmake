        set(LIBRARY_PREFIX "macos")
      elseif(EXISTS "${FOLDER}/lib")
        set(LIBRARY_PREFIX ".")
      endif()
    endif()
  else()
    if(BUILD64)
      if(EXISTS "${FOLDER}/lib/linux_x86_64")
        set(LIBRARY_PREFIX "linux_x86_64")
      elseif(EXISTS "${FOLDER}/lib/linux")
        set(LIBRARY_PREFIX "linux")
      elseif(EXISTS "${FOLDER}/lib")
        set(LIBRARY_PREFIX ".")
      endif()
    else()
      if(EXISTS "${FOLDER}/lib/linux_x86_32")
        set(LIBRARY_PREFIX "linux_x86_32")
      elseif(EXISTS "${FOLDER}/lib/linux")
        set(LIBRARY_PREFIX "linux")
      elseif(EXISTS "${FOLDER}/lib")
        set(LIBRARY_PREFIX ".")
      endif()
    endif()
  endif()
  set(CURRENT_DEP_LIBRARY_PREFIX ${CURRENT_DEP_LIBRARY_PREFIX} ${LIBRARY_PREFIX} PARENT_SCOPE)
endfunction()

function(ADD_DEP_LIBRARY_DIR FOLDER)
  GET_CURRENT_DEP_LIBRARY_PREFIX(${FOLDER})
  set(DEP_LIBRARY_DIR ${DEP_LIBRARY_DIR} "${FOLDER}/lib/${CURRENT_DEP_LIBRARY_PREFIX}" PARENT_SCOPE)
endfunction()
